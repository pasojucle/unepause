            {{ form_label(form)}}
        </div>
        <div class="form-group-control">
            {{ form_widget(form, {'attr' : {'class': 'form-control'}}) }}
            {{ form_errors(form, {'attr' : {'class': 'form-errors'}}) }}
        </div>
    </div>
{% endblock %}

